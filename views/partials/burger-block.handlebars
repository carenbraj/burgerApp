<li class="list-group-item">
    <p class="col">{{burger_name}}</p>
    <div>
        {{#if devoured}} 
        <button class="devouredOrNot btn btn-secondary" data-id="{{id}}" data-devour="{{devoured}}" onClick="window.location.reload();">DEVOUR!</button> 
        {{else}}
        <button class="delete_burger btn btn-secondary" data-id={{this.id}} data-devour="{{devoured}}">Delete</button>
        {{/if}}
    </div>
</li>